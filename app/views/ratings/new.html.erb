<%= provide(:title, "Dodaj ocenę") %>
<%= provide(:position, "Dodaj ocenę") %>

<div class="form">
  <%= form_with(model: @rating, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= hidden_field_tag :previous_url, @previous_url %>
    <h4> Dodajesz ocenę dla:</h4>
    <ul>
      <li>zawodnika: <span><%= @user.name %></span></li>
      <li>w skillu: <span><%= @skill.name %></span></li>
    </ul>
    <%= f.radio_button :user_id, @user.id, checked: true, class: "hidden" %>
    <%= f.radio_button :skill_id, @skill.id, checked: true, class: "hidden" %>

    <p class="label"> Oceń: </p>
    <div class="rating-choice-container">
      <% 5.times do |n| %>
        <%= f.radio_button :value, n+1, class: "hidden choice" %>
        <%= f.label :value, n+1, value: n+1, class: "choice button" %>
      <% end %>
    </div>


    <%= f.submit "oceń", class: "button submit" %>
  <% end %>
</div>
