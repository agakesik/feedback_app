<% provide(:title, @user.name) %>
<% provide(:position, "Profil") %>

<div class="column-page">
  <div class="info-column">
    <h2><%= @user.name %></h2>
    <div>
      <%= @user.created_at.strftime("Dodana/-y %d.%m.%Y")  %>
    </div>
    <div>
      Status:
      <%= content_tag(:div, @user.skater_status.name, class: "cell",
                  style: "background-color: #{@user.skater_status.color}" ) %>
    </div>
    <%= link_to "edytuj", edit_user_path(@user), class: "button add" %>
    <%= link_to "usuń", @user, method: :delete, class: "button delete",
    data: { confirm: "Na pewno usunąć?" } %>
  </div>

  <div class="rating-column">
    <h3>Oceny</h3>

    <% @skill_categories.each do |category| %>
      <div class="row">
        <div class="cell skill-category-cell">
          <strong><%= category.name %></strong>
        </div>
      </div>
      <% category.skills.each do |skill| %>
        <div class="row">
          <div class="cell skill-cell"><%= skill.name %></div>

            <%= link_to(path_to_new_rating(@user, skill)) do %>
              <div class="cell rating-cell">
                <%= rating_value(@user, skill) %>
              </div>
            <% end %>

        </div>
      <% end %>

    <% end %>
  </div>

</div>
