<div class="single-page">
  <div class="form">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "dodaj", class: "button" %>
    <% end %>
  </div>
</div>
