<% provide(:title, "Dodaj człowieka") %>
<% provide(:position, "nowy człowiek") %>

<div class="single-box-page">
  <h1> Dodaj nowego człowieka </h1>
  <div class="content-box">
    <div class="form">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, "Imię", class: "label" %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.radio_button :skater_status_id, SkaterStatus.first.id,
                           checked: true, class: "hidden" %>

        <%= f.submit "dodaj", class: "button submit" %>
      <% end %>
    </div>
  </div>
</div>
