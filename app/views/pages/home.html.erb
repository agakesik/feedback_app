<% provide(:title, "Derbowy Feedback") %>

<header class="header"><h1>Strona główna</h1></header>

<div class="spreadsheet">
  <div class="row">
    <div class="cell"> SKILLS </div>
    <% @users.each do |user| %>
      <div class="cell">
        <%= user.name %>
      </div>
    <% end %>
  </div>

  <% @skill_categories.each do |category| %>
    <div class="row">
      <div class="cell"><strong><%= category.name %></strong></div>
    </div>
    <% category.skills.each do |skill| %>
      <div class="row">
        <div class="cell"><%= skill.name %></div>
        <% @users.each do |user| %>
          <div class="cell">ocena</div>
        <% end %>

      </div>
      <% end %>
    <% end %>
  </div>
